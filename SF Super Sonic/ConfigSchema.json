{
  "Groups": [
    {
      "Name": "Mod",
      "DisplayName": "Super Form Settings",
      "Elements": [
        {
          "Name": "nolimit",
          "DisplayName": "Remove Limitations",
          "Description": [
            "Remove 50 rings needed and ring loss."
          ],
          "Type": "bool",
          "DefaultValue": false
        },
        {
          "Name": "isPerfectParry",
          "DisplayName": "Perfect Parry when Super Sonic 2",
          "Description": [
            "This will force Perfect Parry when you will turn to Super Sonic 2."
          ],
          "Type": "bool",
          "DefaultValue": false
        },
        {
          "Name": "hedgeMayCry",
          "DisplayName": "Hedgehog May Cry",
          "Description": [
            "Super Form will be disabled after 45 seconds for 1:30 and will cost 100 rings instead of 50. SS2 Will cost 200 rings."
          ],
          "Type": "bool",
          "DefaultValue": false
        }
      ]
    },
    {
      "Name": "Audio",
      "DisplayName": "Audio Settings",
      "Elements": [
        {
          "Name": "useSSMusic",
          "DisplayName": "Change music when transforming",
          "Description": [
            "The game will play either; titan music, or the main theme, depending on the current island."
          ],
          "Type": "bool",
          "DefaultValue": true
        },
        {
          "Name": "musicList",
          "DisplayName": "Super Form Music",
          "Description": [
            "Select which music should play when using Super Sonic."
          ],
          "Type": "MusicListE",
          "DefaultValue": "12"
        },
        {
          "Name": "vol",
          "DisplayName": "Volume",
          "Description": [
            "Set the volume of the music. Min: 0, Max: 100"
          ],
          "Type": "float",
          "DefaultValue": "80",
          "MinValue": "0",
          "MaxValue": "100"
        }
      ]
    },
    {
      "Name": "Input",
      "DisplayName": "Configure Controller",
      "Elements": [
        {
          "Name": "AscendBtn",
          "DisplayName": "Ascend Button",
          "Description": [
            "Set the button for ascending."
          ],
          "Type": "ButtonType",
          "DefaultValue": "0x1000"
        },
        {
          "Name": "DescendBtn",
          "DisplayName": "Descend Button",
          "Description": [
            "Set the button for descending."
          ],
          "Type": "ButtonType",
          "DefaultValue": "0x2000"
        },
        {
          "Name": "TransformBtn",
          "DisplayName": "Transform Button",
          "Description": [
            "Set the button for transformation."
          ],
          "Type": "ButtonType",
          "DefaultValue": "0x0001"
        },
        {
          "Name": "UntransformBtn",
          "DisplayName": "DeTransform Button",
          "Description": [
            "Set the button for detransformation."
          ],
          "Type": "ButtonType",
          "DefaultValue": "0x0002"
        }
      ]
    },
    {

      "Name": "Key",
      "DisplayName": "Keyboard",
      "Elements": [
        {
          "Name": "AscendKey",
          "DisplayName": "Ascend Key",
          "Description": [
            "Set the key for ascending."
          ],
          "Type": "string",
          "DefaultValue": "SPACE"
        },
        {
          "Name": "DescendKey",
          "DisplayName": "Descend Key",
          "Description": [
            "Set the key for descending."
          ],
          "Type": "string",
          "DefaultValue": "CTRL"
        },
        {
          "Name": "TransformKey",
          "DisplayName": "Transform Key",
          "Description": [
            "Set the key for transformation."
          ],
          "Type": "string",
          "DefaultValue": "A"
        },
        {
          "Name": "UntransformKey",
          "DisplayName": "Detransform Key",
          "Description": [
            "Set the key for detransformation."
          ],
          "Type": "string",
          "DefaultValue": "Z"
        }
      ]
    }

